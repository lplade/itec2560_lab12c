extends layout

block content
	h1= title
	h2 Create an account

	p= message

	form(action='/signup' method='post')
		label username
			input(type='text' name='username' required)
		br
		label password
			input(type='password' name='password' required)
		br
		input.btn.btn-primary(type='sumbit' name='signup' value='Create account')

	p If you already have an account you can&nbsp;
		a(href="/signin") sign in
		| &nbsp;here

